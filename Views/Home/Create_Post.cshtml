@model Post

<form asp-action="Create_Post" asp-controller="Home" method="post">
    <div class="form-group row">
        <div class="col-sm-10">
            <input asp-for="Content" id="input" type="text" class="form-control" id="inputEmail3" placeholder="Post something witty here...">
            <input asp-for="UserId" type="hidden" value="@ViewBag.UserId">
            <button id="idea" type="submit" class="btn btn-primary">Idea!</button>
        </div>
        <span asp-validation-for="Content"></span>
    </div>
</form>