@model Login
<h1 id="title2">Login</h1>
<form asp-action="Login_User" asp-controller="Home" method="post">
    <div class="form-group row">
        <label asp-for="Login_Email" class="col-sm-2 col-form-label">Email: </label>
        <div class="col-sm-10">
            <input asp-for="Login_Email" type="email" class="form-control" id="inputEmail3">
        </div>
        <span asp-validation-for="Login_Email"></span>
    </div>
    <div class="form-group row">
        <label asp-for="Login_Password" class="col-sm-2 col-form-label">Password: </label>
        <div class="col-sm-10">
            <input asp-for="Login_Password" type="password" class="form-control" id="inputEmail3">
        </div>
        <span asp-validation-for="Login_Password"></span>
    </div>
    <button id="button2" type="submit" class="btn btn-primary">Login</button>
</form>
